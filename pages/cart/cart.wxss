/* pages/cart/cart.wxss */
/*购物车*/
.cart-section{margin-bottom:10px;margin-top: 5px;}
.cart-section .head-wrap{box-sizing: border-box; position: relative; display: -webkit-box; display: -webkit-flex; display: flex; -webkit-box-align: center;background: #f2f2f2; -webkit-align-items: center; align-items: center; padding: 10px 10px 10px 52px; min-height: 45px; z-index: 1;}
.cart-section .head-wrap .icon-select{z-index: 1; display: block; position: absolute; top: 12.5px; left:20px; width: 20px; height: 20px;}
.cart-section .head-wrap .icon-select image{ width:100%; height:100%;}
.cart-section .head-wrap .ico{display: inline-block;margin-right: 5px;width: 20px;height: 20px;vertical-align: top;margin-top: 2px;}

.cart-section .head-wrap .titlec{-webkit-box-flex: 1; -webkit-flex: 1; flex: 1; box-sizing: border-box; display: inline-block; font-size: 15px;padding-right: 10px; width: 100%;}
.cart-section .head-wrap .titlec.oneline{overflow: hidden; text-overflow: ellipsis; white-space: nowrap;}
.cart-section .head-wrap .titlec .icon-arrow-right {margin-left: 2px; display: inline-block; vertical-align: middle; margin-top: -5px; width: 22px;height: 22px;}
.cart-section .head-wrap .titlec .icon-arrow-right image{ width:100%; height:100%;}
.cart-section .head-wrap .state{display: block;line-height: 24px;font-size: 14px;color: #051b28;}
.cart-section .item{position: relative; overflow: hidden;margin: 0 10px 10px;}
.cart-section .item .goods {border-radius: 5px;z-index: 1; position: relative; min-height: 75px; padding: 12px 10px 15px 128px; background: #fff; }
.cart-section .item .goods .icon-select{z-index: 1; display: block; position: absolute; top: 0; left: 0;width:23px;height: 100%;}
.cart-section .item .goods .icon-select image { width: 20px; height: 20px;position: absolute;top: 50%; left:10px; margin-top:-10px;}
.cart-section .item .goods .image{position: absolute; left: 43px; top: 15px; display: block; width: 75px; height: 75px;}
.cart-section .item .goods .content{min-height: 75px;}
.cart-section .item .goods .content .name {overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;font-size: 12px;margin-bottom: 5px;}
.cart-section .item .goods .content .goods-line{position:relative;align-items:center;margin:5px 0 2px}
.cart-section .item .goods .content .goods-line .price{line-height: 36px;float: left;color:#f23030;font-size:11px;margin-right: 10px;}
.cart-section .item .goods .content .goods-line .price.del-price {color: #999;float: left;}
.num-and-more {float: right;margin-right: 10px;}
.cart-section .item .goods .content .goods-line .price .int{ display:inline-block; font-size:16px;}
.goods-line .number-wrap{line-height: 36px;}
.goods-line .number-wrap .lab-title {color: #666;font-size: 13px;font-weight: 400;}
.goods-line .number-wrap .number{ float:right;}
.goods-line .number-wrap .number .decrease {display:inline-block;outline: 0;line-height: 28px;height: 28px;width: 30px;font-size: 22px;border: 1px solid #f5f5f5;border-right-width: 1px;border-right-style: solid;border-right-color: rgb(245, 245, 245);background-color: #f5f5f5; text-align:center;}
.goods-line .number-wrap .decrease,.number-wrap input{float: left;}
.goods-line .number-wrap .number .decrease-left{ border-right: 1px solid #fff;}
.goods-line .number-wrap .number .decrease-right{ border-left: 1px solid #fff;}
.goods-line .number-wrap .number .disabled {color: #cfcfcf;}
.goods-line .number-wrap .number input{line-height: 28px;height: 30px;width: 30px;text-align: center;font-size: 13px;font-weight: 700; border: 1px solid #f5f5f5;background-color: #f5f5f5;box-sizing: border-box;-webkit-appearance: none;-moz-appearance: none;-o-appearance: none;
 appearance: none;margin: 0;}
.cart-section .item .goods .goods-sub-line{position: absolute; top: 16px;right:10px; height: 12px;}
.cart-section .item .goods .goods-sub-line .m-action{margin-right: -10px; color: #999; font-size: 0; font-family: Helvetica; text-align: right;}
.cart-section .item .goods .goods-sub-line .m-action .m-action-item{position: relative; padding: 0 10px; line-height: 1em; font-size: 12px;}
.fixBar{left:0;right:0;margin:0 auto;height:50px;background:#fff;color:#333;font-size:14px;position:fixed;z-index:99;bottom:0;}
.cart-section .item .goods .content .sku-coll{color: #999;margin-bottom: 13px;font-size: 11px;}

.head-wrap .goods-sub-line {position: absolute;top: 7px;right: 10px;padding:0 15px;height: 30px;line-height: 30px;font-size: 14px;color: #fff;background: #0f88eb;border-radius: 3px;}

.order-submitOrder .icon-select{display:inline-block; vertical-align:middle; width: 20px; height: 20px; margin-right:6px;}
.order-submitOrder .icon-select image{ width:100%; height:100%; display:block;}

.pop-address{position: fixed;z-index: 100001;width: 80%;height: 60%;max-width:80%; left:10%; top:20%;background-color: #fff;border-radius: 12px;}
.pop-address .pop-head{ position:relative;height: 50px; line-height: 50px; text-align: center; font-size: 15px; color:#333; border-bottom:1px #e3e5e9 solid;}
.pop-address .pop-head .icon-close{ position:absolute; width:22px; height:22px; right:12px; top:7px;}
.pop-address .pop-head .icon-close image{ width:100%; height:100%;}
.pop-address .pop-body{position: absolute;top: 50px;right:0px;left:0; bottom:0; overflow: auto;padding-bottom: 10px;}
.city-li{ position:relative; border-bottom:1px #e3e5e9 solid; text-align:center; line-height:50px; font-size:13px; color:#666;}
.city-li.cur{ color:#f23030;}
.city-li:last-child{ border-bottom:none;}

.order-submitOrder{ position:fixed;left: 0;width: 100%;bottom: 0; border-top:1px #e3e5e9 solid; height:54px; background:#fff;z-index: 999;}
.order-submitOrder .btn{ float:right;padding: 0 20px; height:54px; line-height:54px;text-align:center; background:#0f88eb;color: #fff;}
.order-submitOrder .btn.red-btn{ background:#0f88eb; color:#fff;}
.order-submitOrder .shifu{ position:absolute;font-size: 16px; line-height:54px; left:10px;}
.order-submitOrder .shifu .price{color: #f23030; display:inline-block;}

.blank {width: 100%;height: 60px;}